<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnObservable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <Button
        android:id="@+id/btnFlowable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flowable"
        app:layout_constraintEnd_toStartOf="@+id/btnCompletable"
        app:layout_constraintStart_toEndOf="@+id/btnObservable"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <Button
        android:id="@+id/btnSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnMaybe"
        app:layout_constraintTop_toBottomOf="@+id/btnCompletable" />

    <Button
        android:id="@+id/btnMaybe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maybe"
        app:layout_constraintEnd_toStartOf="@+id/btnSingle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnObservable" />

    <Button
        android:id="@+id/btnCompletable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMaybe" />

    <Button
        android:id="@+id/btnParityCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create three subscribers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/btnConcatAndMerge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concat and Merge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnParityCheck" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConcatAndMerge" />

</androidx.constraintlayout.widget.ConstraintLayout>