<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginMedium"
        android:layout_marginBottom="@dimen/marginMedium"
        android:text="@string/tvGridLayout"
        android:textColor="@color/black"
        android:textSize="@dimen/TextSizeLarge" />

    <ImageView
        android:id="@+id/flag_australia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        app:srcCompat="@drawable/flag_austria" />

    <ImageView
        android:id="@+id/flag_columbia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/flag_colombia" />

    <ImageView
        android:id="@+id/flag_denmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flag_denmark" />

    <ImageView
        android:id="@+id/flag_italy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flag_italy" />

    <ImageView
        android:id="@+id/flag_madagaskar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        app:srcCompat="@drawable/flag_madagascar" />

    <ImageView
        android:id="@+id/flag_poland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flag_poland" />

    <ImageView
        android:id="@+id/flag_russia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        app:srcCompat="@drawable/flag_switzerland" />

    <ImageView
        android:id="@+id/flag_thailand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        app:srcCompat="@drawable/flag_thailand" />

</GridLayout>