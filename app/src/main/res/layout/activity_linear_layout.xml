<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginMedium"
        android:text="@string/tvLinearLayout"
        android:textColor="@color/black"
        android:textSize="@dimen/TextSizeLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginMedium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAustria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_austria" />

        <ImageView
            android:id="@+id/imageViewColombia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtraSmall"
            android:paddingEnd="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_colombia" />

        <ImageView
            android:id="@+id/imageViewDenmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_denmark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewItaly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_italy" />

        <ImageView
            android:id="@+id/imageViewMadagascar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtraSmall"
            android:paddingEnd="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_madagascar" />

        <ImageView
            android:id="@+id/imageViewPoland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_poland" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewSwitzerland"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_switzerland" />

        <ImageView
            android:id="@+id/imageViewThailand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/paddingExtraSmall"
            android:src="@drawable/flag_thailand" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGoToGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginMedium"
        android:text="@string/btnGoToGrid" />

</LinearLayout>