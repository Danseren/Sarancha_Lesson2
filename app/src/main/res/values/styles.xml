<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="textEndPadding">2dp</item>
        <item name="textStartPadding">2dp</item>
        <item name="chipBackgroundColor">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>